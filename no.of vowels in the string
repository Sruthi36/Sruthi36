#include<stdio.h>
int main()
{
	char s[1000] ;
	int i = 0,count = 0;
	printf("String : ");
	gets(s);
	
	while (s[i] != '\0')
	{
		if (s[i] == 'a' || s[i] == 'e' || s[i] == 'i' || s[i] == 'o' || s[i] == 'u' || s[i] == 'A' || s[i] == 'E' || s[i] == 'I' || s[i] == 'O' || s[i] == 'U')
			count++;
		i++;
		printf("Number of vowels : %d",count);
		return 0;
	}
}
